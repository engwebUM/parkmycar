<%= render 'layouts/jumbotron' %>
<div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <%= render 'layouts/sidenav' %>
        <div class="col-sm-9 col-md-9">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Listing Favorites</h3>
            </div>
            <div class="panel-body">
            <% if current_user.favorites.empty? %>
            You have no favorite spaces.
            <% else %>
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th></th>
                    <th>Space</th>
                    <th>Schedule</th>
                    <th>Starting at</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @favorites %>
                </tbody>
              </table>
              <%= will_paginate @favorites, renderer: BootstrapPagination::Rails %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
