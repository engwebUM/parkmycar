<%= render 'layouts/jumbotron' %>
<div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <%= render 'layouts/sidenav' %>
        <div class="col-sm-9 col-md-9">
          <div role="tabpanel">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="active"><a href="#sent" aria-controls="sent" role="tab" data-toggle="tab">Sent</a></li>
              <li role="presentation"><a href="#pending" aria-controls="pending" role="tab" data-toggle="tab">Profile</a></li>
              <li role="presentation"><a href="#accepted" aria-controls="accepted" role="tab" data-toggle="tab">Messages</a></li>
              <li role="presentation"><a href="#rejected" aria-controls="rejected" role="tab" data-toggle="tab">Settings</a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane fade in active" id="sent">
                <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title">Bookings Sent <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span></h3>
                </div>
                <div class="panel-body">
                <% if @bookings[:sent].empty? %>
                  Your bookings seems empty.
                <% else %>
                <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>Space</th>
                          <th>Date From</th>
                          <th>Date Until</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%= render @bookings[:sent] %>
                      </tbody>
                    </table>
                  <%= will_paginate @bookings[:sent], renderer: BootstrapPagination::Rails %>
                <% end %>
               </div>
              </div>
              </div>
              <div role="tabpanel" class="tab-pane fade" id="pending">
              ...
              </div>
              <div role="tabpanel" class="tab-pane fade" id="accepted">
              ...
              </div>
              <div role="tabpanel" class="tab-pane fade" id="rejected">
              ...
              </div>
            </div>
          </div>
          <script type="text/javascript">
            $('#myTab a').click(function (e) {
              e.preventDefault()
              $(this).tab('show')
            })
          </script>
        </div>
      </div>  
  </div>   
</div>