<div class="container">
<div class="row">
  <div class="col-md-offset-2 col-md-8">
  <div class="page-header">
    <h3>Space Advertising</h3>
  </div>
  <%= form_for(@space, :html => { :multipart => true }) do |f| %>
  	<%= render 'form', f: f  %>
  	<div class="panel panel-primary">
	    <div class="panel-heading">
	      <h3 class="panel-title">Insert Images</h3>
	    </div>
	    <div class="panel-body">
		    <div class="form-group">
				<%= f.fields_for :attachments do |p| %>
				    <div class="field">
				       <%= p.label :file_name %><br>
				       <%= p.file_field :file_name, :multiple => true, name: "attachments[file_name][]" %>
				    </div>
				<% end %>
			</div>
	    </div>
    </div>
	<div class="actions">
    	<%= f.submit "Save", class: 'btn btn-success' %>
  	</div>
  <% end %>
  </div>
</div>
