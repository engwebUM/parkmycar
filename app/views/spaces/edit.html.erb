<div class="container">
<div class="row">
  <div class="col-md-offset-2 col-md-8">
  <div class="page-header">
    <h3>Space Advertising</h3>
  </div>
  <%= form_for(@space, :html => { :multipart => true }) do |f| %>
  	<%= render 'form', f: f  %> 
  	<div class="panel panel-primary">
	    <div class="panel-heading">
	      <h3 class="panel-title">Edit Images</h3>
	    </div>
	    <div class="panel-body">
	        <div class="form-group">
				<div class="row">
					<% @attachments.each do |p| %>
						<div class="col-md-4">
						 	<%= image_tag p.file_name_url, :style => "width: 200px; height: 250x;"  %>
						  	<hr>
						  	<%= link_to p, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %>
						     <span class="glyphicon glyphicon-remove-circle"> Remove</span>
						    <% end %>
						</div>
					<% end %>
				</div>	
				<div class="row">
					<%= f.fields_for :attachments do |p| %>
					    <div class="field">
						   <%= p.label :file_name %><br>
						   <%= p.file_field :file_name, :multiple => true, name: "attachments[file_name][]" %>
						</div>
					<% end %>
				</div>
		    </div>
	    </div>
  	</div>
	<div class="actions">
	    <%= f.submit "Save", class: 'btn btn-success' %>
	</div>
  <% end %>
  </div>
</div>
