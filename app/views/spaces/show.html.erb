<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-sm-12 col-md-12">
    <h1><%= @space.title %>
      <% if current_user.present? %>
        <% unless current_user.favorites.exists?(space: @space) %>
          <%= link_to favorites_path(space_id: @space), method: :post, class: "btn btn-success btn-md" do %>
            <span class="glyphicon glyphicon-star-empty"></span> Add to favorites
          <% end %>
        <% else %>
          <%= link_to favorite_path(@space), method: :delete, class: "btn btn-danger btn-md" do %>
            <span class="glyphicon glyphicon-star"></span> Remove from favorites
          <% end %>
        <% end %>
      <% end %>
      </h1>
      </div>
  </div>
  <br>
  <br>
  <div class="row">
    <%= render 'bookings/form' %>
    <%= render 'spaces/shared/map' %>
  </div>
  <div>
    <%= render 'spaces/shared/description' %>
  </div>
  <div class="row">
    <%= render 'reviews/reviews' %>
    <%= render 'spaces/shared/owner' %>
  </div>
</div>
