<p id="notice"><%= notice %></p>
<h1>Show space</h1>
<div>
  <p>
    <p><%= @space.title %></p>
  </p>
</div>
<div>
  <h2>Description</h2>
  <p>
    <strong>Description:</strong>
    <%= @space.description %>
  </p>

  <p>
    <strong>Price hour:</strong>
    <%= @space.price_hour %>
  </p>

  <p>
    <strong>Price week:</strong>
    <%= @space.price_week %>
  </p>

  <p>
    <strong>Price month:</strong>
    <%= @space.price_month %>
  </p>
</div>
<div>
  <h1>Reviews</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Evaluation</th>
        <th>Comment</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @space.review.each do |review| %>
      <tr>
        <td><%= User.find(review.user_id).username %></td>
        <td><%= review.evaluation %></td>
        <td><%= review.text_comment %></td>
        <td><%= review.created_at.strftime("%F %T") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
