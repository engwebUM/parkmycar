<% if @space.errors.any? %>
<div class="row">
  <div class="col-md-12">
    <div id="error_explanation">
      <h4><%= pluralize(@space.errors.count, "error") %> prevented this space from being saved:</h4>
      <div class="alert alert-error alert-block"> <button type="button"
 class="close" data-dismiss='alert'>x</button>
       <ul>
          <% @space.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Information</h3>
  </div>
  <div class="panel-body">
    <div class="form-group row">
      <div class="col-md-7">
        <%= f.label :title, class: 'sr-only' %>
        <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Title', :required => true %>
      </div>

      <div class="col-md-5">
        <%= f.label :available_spaces, class: 'sr-only' %>
        <%= f.number_field :available_spaces, class: 'form-control', placeholder: 'Available Spaces (Min: 1)', :required => true, min: '1' %>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :description, class: 'sr-only' %>
        <%= f.text_area :description, class: 'form-control', rows: '10' ,placeholder: 'Space description goes here',:required => true %>
    </div>
  </div>
</div>
<hr>
<div class="panel panel-primary">
<div class="panel-heading">
  <h3 class="panel-title">Location</h3>
</div>
<div class="panel-body">
  <div class="form-group">
    <%= f.label :country, class: 'sr-only' %>
    <%= f.text_field :country, class: 'form-control', placeholder: 'Country e.g.: EUA', :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :city, class: 'sr-only' %>
    <%= f.text_field :city, class: 'form-control', placeholder: 'City/State e.g.: New York', :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :address, class: 'sr-only' %>
    <%= f.text_field :address, class: 'form-control', placeholder: 'Address e.g.: 350 Fifth Avenue', :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :post_code, class: 'sr-only' %>
    <%= f.text_field :post_code, class: 'form-control', placeholder: 'Post Code e.g.: 10118-3299', :required => true %>
  </div>
</div>
</div>
<hr>
<div class="panel panel-primary">
<div class="panel-heading">
  <h3 class="panel-title">Pricing</h3>
</div>
<div class="panel-body">
  <div class="form-group row">
      <div class="col-md-4">
        <%= f.label :price_hour, class: 'sr-only' %>
        <%= f.text_field :price_hour, class: 'form-control', placeholder: 'Per Hour e.g.: 0.25 EUR', :required => true  %>
      </div>
      <div class="col-md-4">
        <%= f.label :price_week, class: 'sr-only' %>
        <%= f.text_field :price_week, class: 'form-control', placeholder: 'Per Week e.g.: 7.50 EUR' %>
      </div>
      <div class="col-md-4">
          <%= f.label :price_month, class: 'sr-only' %>
          <%= f.text_field :price_month, class: 'form-control', placeholder: 'Per Month e.g.: 25.00 EUR'  %>
      </div>
  </div>
</div>
</div>
<hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Schedule</h3>
  </div>
  <div class="panel-body">
    <div class="form-group row">
      <div class="col-md-4">
          <div class='input-group date' id='date_from'>
              <%= f.label :date_from, class: 'sr-only' %>
              <%= f.text_field :date_from, class: 'form-control', placeholder: 'Datetime from', :required => true %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
      </div>
      <div class="col-md-4">
          <div class='input-group date' id='date_until'>
              <%= f.label :date_until, class: 'sr-only' %>
              <%= f.text_field :date_until, class: 'form-control', placeholder: 'Datetime until', :required => true %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
      </div>
      <div class="col-md-4">
            <%= f.label :available_weekend %>
            <%= f.check_box :available_weekend %>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Insert New Images</h3>
  </div>
  <div class="panel-body">
    <div class="form-group">
    <%= f.fields_for :attachments_new do |a| %>
        <div class="field">
          <%= a.label :file_name %>
          <%= a.file_field :file_name, :multiple => true, name: "attachments_new[file_name][]" %>
      </div>
    <% end %>
  </div>
  </div>
</div>
<hr>
<script type="text/javascript">
$(function () {
    $('#date_from').datetimepicker({ format: 'YYYY-MM-DD HH:mm' });
    $('#date_until').datetimepicker({ format: 'YYYY-MM-DD HH:mm' });
});
</script>
