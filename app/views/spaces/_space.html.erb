<tr data-link='<%= space_path(space) %>'>
	<td><%= image_tag space.first_image %></td>
    <td><strong><%= space.title %></strong>, <%= space.address %></td>
    <td><%= l space.date_from, format: :short %> -
          <%= l space.date_until, format: :short %> <br>
          <%= l space.time_from, format: :short %> -
          <%= l space.time_until, format: :short %> </td>
    <td><span class="btn btn-success btn-xs"><%= space.price_hour %> EUR/hour</span> </td>   	
</tr>

<% if current_page?(spaces_path) %>
<tr>
    <td colspan="3"></td>
    <td>
    <%= link_to edit_space_path(space), class: "btn btn-info btn-xs" do %>
     <span class="glyphicon glyphicon-edit"> Edit</span>
    <% end %>
    <%= link_to space, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %>
     <span class="glyphicon glyphicon-remove-circle"> Remove</span>
    <% end %>
    </td>
</tr>
<% end %>
<script type="text/javascript">
 $(function() {        
    $("tr[data-link]").click(function() {
      window.location = this.dataset.link
    });
 });
</script>
