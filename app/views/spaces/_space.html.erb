<tr data-link='<%= space_path(space) %>'>
	<td><%= image_tag("blue_logo_background.png", width: '100px', heigh: '100px', class: 'img-responsive') %></td>
    <td><%= space.title %></td>
    <td><%= space.price_hour %></td>
    <td><%= space.address %></td>	
</tr>

<% if current_page?(spaces_path) %>
        <td>
        <%= link_to edit_space_path(space), class: "btn btn-default" do %>
         <span class="glyphicon glyphicon-edit"> Edit</span>
        <% end %>
        </td>

        <td>
        <%= link_to space, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" do %>
         <span class="glyphicon glyphicon-remove-circle"> Remove</span>
        <% end %>
        </td>
<% end %>

<script type="text/javascript">
 $(function() {        
    $("tr[data-link]").click(function() {
      window.location = this.dataset.link
    });
 });
</script>
