<%= render 'layouts/jumbotron' %>
<div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <%= render 'layouts/sidenav' %>
        <div class="col-sm-9 col-md-9">
              <div class="well">
                  <h1>Listing spaces</h1>
                  <%= link_to 'New Space', new_space_path %>
                  <table>
                    <thead>
                      <tr>
                        <th>Title</th>
                        <th>Address</th>
                        <th>Date from</th>
                        <th>Date until</th>
                        <th>Pending Bookings</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @spaces.each do |space| %>
                        <tr>
                          <td><%= space.title %></td>
                          <td><%= space.address %></td>
                          <td><%= space.post_code %></td>
                          <td><%= space.date_from %></td>
                          <td><%= space.date_until %></td>
                          <td></td>
                          <td><%= link_to 'Show', space %></td>
                          <td><%= link_to 'Edit', edit_space_path(space) %></td>
                          <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                   <%= will_paginate @spaces, renderer: BootstrapPagination::Rails %>
              </div>
        </div>
      </div>  
  </div>   
</div>