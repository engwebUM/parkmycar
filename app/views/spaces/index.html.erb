<p id="notice"><%= notice %></p>

<h1>Listing Spaces</h1>

<% if @spaces.count == 0 %>
  <p>There are no spaces associated with your account.</p>
<% else %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Available spaces</th>
      <th>Description</th>
      <th>Country</th>
      <th>City</th>
      <th>Address</th>
      <th>Post code</th>
      <th>Price hour</th>
      <th>Price week</th>
      <th>Price month</th>
      <th>Date from</th>
      <th>Date until</th>
      <th>Available weekend</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.title %></td>
        <td><%= space.available_spaces %></td>
        <td><%= space.description %></td>
        <td><%= space.country %></td>
        <td><%= space.city %></td>
        <td><%= space.address %></td>
        <td><%= space.post_code %></td>
        <td><%= space.price_hour %></td>
        <td><%= space.price_week %></td>
        <td><%= space.price_month %></td>
        <td><%= space.date_from %></td>
        <td><%= space.date_until %></td>
        <td><%= space.available_weekend %></td>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 <%= will_paginate @spaces, renderer: BootstrapPagination::Rails %>
<br>
<% end %>
<%= link_to 'New Space', new_space_path %>
