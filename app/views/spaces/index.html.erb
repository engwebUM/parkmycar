<%= render 'layouts/jumbotron' %>
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <%= render 'layouts/sidenav' %>
      <div class="col-sm-9 col-md-9">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">Listing spaces <%= link_to "New Space", new_space_path, class: 'btn btn-info' %></h3>
          </div>
          <div class="panel-body">
          <% if @spaces.empty? %>
          You have not spaces.
          <% else %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Space</th>
                    <th></th>
                    <th>Schedule</th>
                    <th>Starting at</th>
                    <th colspan="2"/>
                  </tr>
                </thead>
                <tbody>
                <% @spaces.each do |space| %>
                  <%= render 'own_space', space: space %>
                <% end %>
                </tbody>
              </table>
            </div>
            <%= will_paginate @spaces, renderer: BootstrapPagination::Rails %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
