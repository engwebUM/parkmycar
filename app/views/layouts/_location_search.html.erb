<div class="form-group">
  <%= label_tag :location, 'Search spaces nearby', class: 'sr-only' %>
  <%= text_field_tag :location, params[:location], placeholder: 'Search spaces nearby', class: 'form-control', required: true %>
</div>
<div class="form-group">
  <%= label_tag :distance, "Distance", class: 'sr-only' %>
  <%= number_field_tag :distance, params[:distance], placeholder: 'Distance e.g.: 10 km', class: 'form-control', min: '1', required: true %>
</div>
<div class="form-group">
  <%= submit_tag "Go", class: 'btn btn-success' %>
</div>
